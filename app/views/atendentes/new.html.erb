<section class="bg-light py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card">
          <div class="card-body">
            <h2 class="h4 mb-4">Complete seu cadastro como Atendente</h2>

            <%= form_with model: @atendente, url: atendentes_path, local: true do |f| %>
              <div class="mb-3">
                <%= f.label :Nome, class: "form-label" %>
                <%= f.text_field :Nome, class: "form-control", placeholder: "Nome Completo", required: true %>
              </div>

              <div class="mb-3">
                <%= f.label :CPF, class: "form-label" %>
                <%= f.text_field :CPF, class: "form-control", placeholder: "CPF (apenas nÃºmeros)", required: true %>
              </div>

              <div class="mb-3">
                <%= f.label :dt_nasce, "Data de Nascimento", class: "form-label" %>
                <%= f.date_field :dt_nasce, class: "form-control", required: true %>
              </div>

              <div class="d-grid">
                <%= f.submit "Finalizar Cadastro", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

