<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmácia - Sistema de Atendimento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #007bff; /* Azul vibrante */
            color: #fff;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            background: #fff;
            color: #333;
            border-radius: 8px;
            padding: 20px;
            margin-top: 50px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1, h3 {
            color: #007bff;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .list-group-item {
            border: 1px solid #ddd;
        }

        table {
            border-collapse: separate;
            border-spacing: 0 8px;
        }

        table thead th {
            background-color: #007bff;
            color: white;
            border: none;
        }

        table tfoot td {
            font-weight: bold;
        }

        .btn {
            border-radius: 20px;
        }

        .finalizar {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Sistema de Atendimento - Farmácia</h1>

        <!-- Lista de Remédios -->
        <div class="row mt-4">
            <div class="col-md-6">
                <h3>Lista de Remédios</h3>
                <% if @remedios.present? %> <!-- Verifica se @remedios não é nil ou vazio -->
                    <ul class="list-group" id="medicamentos-list">
                    <% @remedios.each do |remedio| %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= remedio.nome %>
                        <button class="btn btn-sm btn-primary" onclick="adicionarAoCaixa('<%= remedio.nome %>', <%= remedio.preco %>)">Adicionar</button>
                        </li>
                    <% end %>
                    </ul>
                    <div class="mt-3">
                    <%= paginate @remedios %> <!-- Renderiza os links de paginação -->
                    </div>
                <% else %>
                    <p>Nenhum remédio encontrado.</p> <!-- Mensagem caso não haja remédios -->
                <% end %>
            </div>

            <!-- Caixa -->
            <div class="col-md-6">
                <h3>Caixa</h3>
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th>Produto</th>
                            <th>Preço (R$)</th>
                        </tr>
                    </thead>
                    <tbody id="caixa"></tbody>
                    <tfoot>
                        <tr>
                            <td><strong>Total</strong></td>
                            <td id="total">R$ 0,00</td>
                        </tr>
                    </tfoot>
                </table>
                <div class="finalizar">
                    <button class="btn btn-success" onclick="finalizarCompra()">Finalizar Compra</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let total = 0;

        function adicionarAoCaixa(nome, preco) {
            const caixa = document.getElementById('caixa');

            // Adicionar o item ao caixa
            const row = document.createElement('tr');
            row.innerHTML = `<td>${nome}</td><td>R$ ${preco.toFixed(2)}</td>`;
            caixa.appendChild(row);

            // Atualizar o total
            total += preco;
            document.getElementById('total').textContent = `R$ ${total.toFixed(2)}`;
        }

        function finalizarCompra() {
            if (total === 0) {
                alert('Nenhum item adicionado ao caixa.');
                return;
            }
            alert(`Compra finalizada! Total: R$ ${total.toFixed(2)}`);

            // Limpar o caixa
            document.getElementById('caixa').innerHTML = '';
            total = 0;
            document.getElementById('total').textContent = 'R$ 0,00';
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>