<h1>Vendas Registradas</h1>

<%= link_to 'Registrar Nova Venda', new_venda_path, class: 'btn btn-primary' %>

<table class="table mt-3">
  <thead>
    <tr>
      <th>Remédio</th>
      <th>Quantidade</th>
      <th>Valor</th>
      <th>Atendente</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><%= venda.remedio.Remediocol %></td>
        <td><%= venda.quantidade %></td>
        <td><%= number_to_currency(venda.valor) %></td>
        <td><%= venda.atendente.nome %></td>
        <td>
          <%= link_to 'Detalhes', venda_path(venda), class: 'btn btn-info btn-sm' %> |
          <%= link_to 'Excluir', venda_path(venda), method: :delete, data: { confirm: 'Tem certeza que deseja excluir esta venda?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
